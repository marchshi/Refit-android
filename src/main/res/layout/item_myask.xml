<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ly_cat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_cat_FirstCatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="一级类目"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_micro" />
        <View
            android:layout_width="0.1dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_small"
            android:background="@color/colorPrimary" />
        <TextView
            android:id="@+id/tv_cat_SecondCatName"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_weight="1"
            android:text="二级类目"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_micro" />
        <TextView
            android:text="￥"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/text_red"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="20"
            android:id="@+id/tv_myask_price"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/text_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="我有一头小毛驴从来也不骑，有一天我即兴骑它去赶集。"
        android:textSize="@dimen/font_default"
        android:textColor="@color/text_black"
        android:id="@+id/tv_myask_cont"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_medium"
        android:minHeight="38dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="0"
            android:id="@+id/tv_myask_apply"
            android:textSize="@dimen/font_small"
            android:textColor="@color/text_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="人申请回答"
            android:textSize="@dimen/font_small"
            android:textColor="@color/text_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="0"
            android:id="@+id/tv_myask_pay"
            android:textSize="@dimen/font_small"
            android:textColor="@color/text_default"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="人已支付"
            android:textSize="@dimen/font_small"
            android:textColor="@color/text_default"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/margin_default"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"/>
</LinearLayout>
