<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#eeeeee"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/background"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ib_search_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_title_finish"
            android:layout_gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginRight="4dp"
            />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <View
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@color/text_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <EditText
                android:id="@+id/et_search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="16sp"
                android:imeOptions="actionSearch"
                android:textColorHint="@color/text_gray"
                android:textColor="@color/text_black"
                android:hint="请 输 入 您 想 导 购 的 商 品"
                android:layout_centerVertical="true"
                android:inputType="text"/>
            <ImageView
                android:visibility="visible"
                android:src="@drawable/icon_search_clear"
                android:id="@+id/img_search_clear"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_search_search"
            android:layout_gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginLeft="4dp"
            android:textSize="16sp"
            android:text="搜索"
            android:textColor="@color/text_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="搜索历史"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_search_clear_his"
                    android:text="清空记录"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ListView
                android:visibility="visible"
                android:id="@+id/lv_search_his"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:visibility="gone"
                android:id="@+id/lv_search_tips"
                android:background="@drawable/lv_search_tips_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="4dp">
            </ListView>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>



