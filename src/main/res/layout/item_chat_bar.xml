<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp">
    <com.smq.demo5.view.ChatLinearLayout
        app:scrollable="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <RelativeLayout
            android:id="@+id/rl_chat_bar"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <com.smq.demo5.view.CircleImageView
                android:id="@+id/cimg_chat_touxiang"
                android:src="@drawable/icon_touxiang_shouye"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/tv_chat_name"
                android:text="吴彦祖"
                android:textSize="@dimen/font_small"
                android:textColor="@color/text_black"
                android:layout_toRightOf="@+id/cimg_chat_touxiang"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_chat_last"
                android:text="每天都被自己帅醒:)"
                android:textSize="@dimen/font_micro"
                android:textColor="@color/text_gray"
                android:layout_toRightOf="@+id/cimg_chat_touxiang"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_chat_time"
                android:text="16:01"
                android:textSize="@dimen/font_micro"
                android:textColor="@color/text_gray"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_chat_tip"
                android:text="客户"
                android:gravity="center"
                android:textSize="@dimen/font_mini"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_default"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <TextView
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/font_default"
            android:gravity="center"
            android:layout_width="84dp"
            android:layout_height="65dp"
            android:background="@color/text_red"/>
    </com.smq.demo5.view.ChatLinearLayout>

</LinearLayout>

