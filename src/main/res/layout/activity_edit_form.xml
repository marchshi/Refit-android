<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/font_small"
            android:textColor="@color/text_black"
            android:id="@+id/tv_form_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="、"
            android:textSize="@dimen/font_small"
            android:textColor="@color/text_black"
            android:layout_width="10dp"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="@dimen/font_small"
            android:textColor="@color/text_black"
            android:id="@+id/et_form_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:background="@color/background"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_form_dan"
            android:text="单选"
            android:textColor="@color/text_black"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"/>
        <CheckBox
            android:id="@+id/cb_form_duo"
            android:text="多选"
            android:textColor="@color/text_black"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"/>
        <CheckBox
            android:id="@+id/cb_form_text"
            android:text="简答"
            android:textColor="@color/text_black"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_item_con"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <RelativeLayout
        android:layout_margin="@dimen/margin_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_item_del"
            android:text="删除"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_con_minus"
            android:layout_alignParentRight="true"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_con_add"
            android:layout_toLeftOf="@id/bt_con_minus"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
