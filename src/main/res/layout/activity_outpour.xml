<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smq.demo5.activity.OutpourActivity">

    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:transitionName="account_1"
        android:gravity="center_horizontal"
        android:background="@color/colorSecond"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:transitionName="account_3"
            android:text="可提现余额"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:transitionName="account_2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="￥"
                android:textSize="@dimen/font_large"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_account_outpour"
                android:text="53.00"
                android:textSize="@dimen/font_large"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="32dp"
        android:background="@drawable/draw_account_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="提现金额："
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_default" />

        <EditText
            android:id="@+id/et_account_outpour"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:hint="输入金额"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_default" />

        <TextView
            android:id="@+id/tv_account_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_medium"
            android:text="全部"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_small" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/draw_account_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_centerVertical="true"
            android:text="提款到："
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_default" />

        <LinearLayout
            android:layout_centerInParent="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_big"
                android:layout_height="@dimen/icon_big"
                android:src="@drawable/img_account_zfb" />
            <TextView
                android:text="188******22"
                android:textSize="@dimen/font_mini"
                android:textColor="@color/text_gray"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/margin_medium"
            android:src="@drawable/icon_arrow_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:text="1，100元以下需要手续费，2元/笔"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/font_mini"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="2，100元以上无需手续费"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/font_mini"
        android:layout_marginTop="@dimen/margin_mini"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_account_outpour_btn"
        android:text="提现"
        android:textSize="@dimen/font_large"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/draw_account_inpour"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <View
        android:layout_weight="1"
        android:layout_width="1dp"
        android:layout_height="0dp"/>
    <TextView
        android:text="由之导购"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/font_mini"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
</LinearLayout>
