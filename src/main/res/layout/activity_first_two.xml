<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <View
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_line"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="职业"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=" *"
                android:textColor="@color/colorSecond"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_login_ref"
                android:textSize="@dimen/font_default"
                android:textColor="@color/text_black"
                android:maxLength="18"
                android:focusable="true"
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/tv_login_ref_num"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_micro"
                android:text="18"
                android:layout_marginBottom="2dp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_line"
        android:background="@color/background"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="简介"
            android:textSize="@dimen/font_small"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:textColor="@color/text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_login_resume"
            android:textSize="@dimen/font_default"
            android:maxLength="99"
            android:hint="简要介绍一下自己"
            android:textColorHint="@color/text_gray"
            android:textColor="@color/text_black"
            android:background="@null"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:maxLines="4"
            android:minHeight="57dp"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_login_resume_num"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="99"
            android:textSize="@dimen/font_micro"
            android:textColor="@color/text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_login_next_two"
            android:text="完成"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginTop="39dp"
            android:background="@drawable/draw_login_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
