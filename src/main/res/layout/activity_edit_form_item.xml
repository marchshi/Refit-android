<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/draw_form_background"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/font_small"
                android:textColor="@color/text_black"
                android:id="@+id/tv_form_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="."
                android:textSize="@dimen/font_small"
                android:textColor="@color/text_black"
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <EditText
                android:textSize="@dimen/font_small"
                android:textColor="@color/text_black"
                android:id="@+id/et_form_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:background="@drawable/draw_form_typebackground"
            android:orientation="horizontal"
            android:layout_width="312dp"
            android:layout_height="30dp">
            <CheckBox
                android:id="@+id/cb_form_dan"
                android:layout_marginLeft="8dp"
                android:text="单选"
                android:textSize="14sp"
                android:padding="6dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@android:style/Widget.CompoundButton.RadioButton"/>
            <CheckBox
                android:id="@+id/cb_form_duo"
                android:text="多选"
                android:textSize="14sp"
                android:padding="6dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"/>

            <CheckBox
                android:id="@+id/cb_form_text"
                android:text="简答"
                android:layout_marginRight="8dp"
                android:textSize="14sp"
                android:padding="6dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_item_con"
            android:orientation="vertical"
            android:layout_margin="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
        <RelativeLayout
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="140dp"
                android:id="@+id/bt_con_add"
                android:text="＋"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_form_circle"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/bt_con_minus"
                android:text="－"
                android:layout_marginLeft="175dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_form_circle"
                android:textStyle="normal|bold" />
        </RelativeLayout>
        <TextView
            android:id="@+id/bt_item_del"
            android:text="×"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/draw_form_circle"
            android:layout_gravity="right"
            />
    </LinearLayout>
</LinearLayout>
