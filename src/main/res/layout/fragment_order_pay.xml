<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_order_pay_back"
    android:orientation="vertical"
    android:background="#66000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_order_background"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:id="@+id/ll_order_pay"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/img_order_pay_finish"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:src="@drawable/icon_arrow_blue"
                android:padding="@dimen/margin_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="付款详情"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_medium"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:text="支付方式："
            android:textSize="@dimen/font_small"
            android:textColor="@color/text_black"
            android:layout_margin="@dimen/margin_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_order_yue"
            android:paddingTop="@dimen/margin_default"
            android:paddingBottom="@dimen/margin_default"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="@dimen/margin_medium"
                android:src="@drawable/icon_order_yue24"
                android:layout_width="@dimen/icon_big"
                android:layout_height="@dimen/icon_big" />

            <TextView
                android:text="账户余额"
                android:textSize="@dimen/font_default"
                android:textColor="@color/text_black"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="￥"
                android:textSize="@dimen/font_micro"
                android:textColor="@color/text_default"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_gravity="bottom"
                android:layout_marginBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_order_pay_balance"
                android:text="53.00"
                android:textSize="@dimen/font_micro"
                android:textColor="@color/text_default"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/img_order_oval_yue"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_gravity="center_vertical"
                android:src="@drawable/draw_order_oval"
                android:layout_width="@dimen/icon_normal"
                android:layout_height="@dimen/icon_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"/>

        <LinearLayout
            android:id="@+id/ll_order_zfb"
            android:paddingTop="@dimen/margin_default"
            android:paddingBottom="@dimen/margin_default"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="@dimen/margin_medium"
                android:src="@drawable/icon_order_zfb24"
                android:layout_width="@dimen/icon_big"
                android:layout_height="@dimen/icon_big" />

            <TextView
                android:text="支付宝"
                android:textSize="@dimen/font_default"
                android:textColor="@color/text_black"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>

            <ImageView
                android:id="@+id/img_order_oval_zfb"
                android:layout_width="@dimen/icon_normal"
                android:layout_height="@dimen/icon_normal"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_medium"
                android:src="@drawable/draw_order_oval" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"/>

        <LinearLayout
            android:id="@+id/ll_order_weixin"
            android:paddingTop="@dimen/margin_default"
            android:paddingBottom="@dimen/margin_default"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="@dimen/margin_medium"
                android:src="@drawable/icon_order_weixin24"
                android:layout_width="@dimen/icon_big"
                android:layout_height="@dimen/icon_big" />

            <TextView
                android:text="微信"
                android:textSize="@dimen/font_default"
                android:textColor="@color/text_black"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/img_order_oval_weixin"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_gravity="center_vertical"
                android:src="@drawable/draw_order_oval"
                android:layout_width="@dimen/icon_normal"
                android:layout_height="@dimen/icon_normal" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@color/background"/>
        <LinearLayout
            android:id="@+id/ll_order_submit"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:text="确认付款 "
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_order_pay_price"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="元"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

