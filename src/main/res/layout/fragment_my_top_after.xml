<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_my_after"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_my_zhuxiao"
            android:text="注销"
            android:padding="@dimen/margin_small"
            android:textSize="@dimen/font_small"
            android:textColor="@color/white"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/ly_my_info_edit"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:layout_width="48dp"
                android:layout_height="48dp">
                <ImageView
                    android:layout_marginTop="8dp"
                    android:src="@drawable/icon_edit_info"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/margin_mini"
                    android:text="编辑"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_micro"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
    </RelativeLayout>
    <com.smq.demo5.view.CircleImageView
        app:border_color="@color/colorPrimary"
        android:id="@+id/img_touxiang_my"
        android:src="@drawable/icon_touxiang_zhuce"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <TextView
        android:id="@+id/tv_my_name"
        android:text="鑫鑫大神"
        android:textSize="@dimen/font_default"
        android:layout_marginTop="@dimen/margin_default"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_my_prof"
        android:text="大学生"
        android:textSize="@dimen/font_small"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="已完成"
            android:textSize="@dimen/font_small"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_my_times"
            android:textSize="@dimen/font_small"
            android:text="0"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="次导购"
            android:textSize="@dimen/font_small"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <TextView
            android:text="总收益为￥"
            android:textSize="@dimen/font_small"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_my_income"
            android:text="0.00"
            android:textSize="@dimen/font_small"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>